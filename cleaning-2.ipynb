for i in range(len(df)):
    if i in multiple:
        accur.append('multiple')
    elif i in none:
        accur.append('NONE')
    else:
        accur.append('not sure')
df['accur'] = accur

v = ['PCS', 'UNITS', 'KGS', 'LBS', 'METER', 'BAGS', 'MTS', 'MT', 'TONS', 'SQFT', 'YDS', 'METERS']
filtr = []
